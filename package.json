{
  "name": "usoniancss",
  "version": "1.0.0",
  "description": "Nimble CSS toolkit for building scalable, performant UI.",
  "repository": "bradcerasani/usoniancss",
  "keywords": [
    "itcss",
    "suitcss",
    "usoniancss",
    "postcss"
  ],
  "author": {
    "name": "Brad Cerasani",
    "email": "bradcerasani@gmail.com",
    "url": "bradcerasani.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bradcerasani/usoniancss/issues"
  },
  "homepage": "https://github.com/bradcerasani/stylelint-config-usoniancss#readme",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf ./dist && mkdir dist && postcss -c config/postcss.config.js",
    "dev": "postcss -c config/postcss.config.js -w",
    "lint": "stylelint",
    "minify": "postcss -u cssnano dist/usonian.css -o dist/usonian.min.css && npm run size",
    "prepublish": "mkdir -p dist && npm run build && npm run minify",
    "size": "gzip-size dist/usonian.min.css | pretty-bytes"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "cssnano": "^3.5.2",
    "eslint": "^2.0.0",
    "gzip-size-cli": "^1.0.0",
    "normalize.css": "^4.0.0",
    "postcss": "^5.0.15",
    "postcss-cli": "^2.5.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.0",
    "postcss-discard-comments": "^2.0.4",
    "postcss-import": "^8.0.2",
    "postcss-remove-root": "0.0.2",
    "postcss-reporter": "^1.3.1",
    "pretty-bytes-cli": "^1.0.0",
    "stylelint": "^5.2.1",
    "stylelint-config-usoniancss": "^1.0.0",
    "stylelint-selector-bem-pattern": "^0.2.1"
  }
}
