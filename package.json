{
  "name": "usoniancss",
  "version": "2.0.0",
  "description": "Nimble CSS toolkit for building scalable, performant UI.",
  "repository": "",
  "keywords": [
    "itcss",
    "suitcss",
    "usoniancss",
    "postcss"
  ],
  "author": {
    "name": "Black Pixel",
    "url": "https://blackpixel.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bradcerasani/usoniancss/issues"
  },
  "homepage": "https://github.com/bradcerasani/stylelint-config-usoniancss#readme",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf ./dist && postcss -c postcss.config.js",
    "dev": "postcss -c postcss.config.js -w",
    "lint": "stylelint",
    "size": "gzip-size dist/usonian.min.css | pretty-bytes",
    "minify": "postcss -u cssnano dist/usonian.css -o dist/usonian.min.css && npm run size",
    "prepublish": "npm run build && npm run minify"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.9.1",
    "gzip-size-cli": "^1.0.0",
    "normalize.css": "^4.0.0",
    "postcss": "^5.2.6",
    "postcss-cli": "^2.5.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-import": "^9.0.0",
    "postcss-reporter": "^1.3.1",
    "pretty-bytes-cli": "^1.0.0",
    "stylelint": "^5.2.1",
    "stylelint-config-usoniancss": "^1.0.0",
    "stylelint-selector-bem-pattern": "^0.2.1"
  }
}
